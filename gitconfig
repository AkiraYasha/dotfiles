[user]
  name = Chris Soyars
  email = ctso@ctso.me

[merge]
  ff = only

[rebase]
  autosquash = true

[core]
  editor = vim

[diff]
  renames = true
  conflictstyle = patience

[alias]
  st = status
  di = diff
  co = checkout
  ci = commit
  chp = cherry-pick
  br = branch
  sta = stash
  gr = log --graph --date-order -C -M --pretty=format:\"%Cblue%h%Creset %Cgreen[%ad]%Creset (%an) %Cgreen%d%Creset %s\" --all --date=short
  fixup = !sh -c 'git commit -m \"fixup! $(git log -1 --format='\\''%s'\\'' $@)\"' -
  squash = !sh -c 'git commit -m \"squash! $(git log -1 --format='\\''%s'\\'' $@)\"' -
  ri = rebase -i

[apply]
  whitespace =nowarn

[color]
  ui = auto

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[branch]
	autosetuprebase = always
